@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="title" > Welcome to JAT Airlines Reservations</h1>

</div>

<section class="section1">
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img style="height: 700px; object-fit: contain; margin: auto;" src="~/img/homepageimgs/standingpathwayplane.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5 style="color: rgb(255, 246, 246); font-size: 30px; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);">Hospitality at its Best</h5>
                    <p style="color: rgb(255, 246, 246); text-shadow: 2px 2px 1px rgba(0, 0, 0, 0.5); padding-bottom: 10px;">We are commited to giving you exceptional service </p>
                </div>
            </div>
            <div class="carousel-item">
                <img style="height: 700px; object-fit: contain; margin: auto;" src="~/img/homepageimgs/manarmsfolded.jpg" class=" d-block  w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5 style="color: rgb(255, 246, 246);font-size: 30px; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);">Unrivaled Performance</h5>
                    <p style="color: rgb(255, 246, 246); text-shadow: 2px 2px 1px rgba(0, 0, 0, 0.5); padding-bottom: 10px;">Redefining Air Travel. Elevated by Our Team</p>
                </div>
            </div>
            <div class="carousel-item">
                <img style="height: 700px; object-fit: contain; margin: auto;" src="~/img/homepageimgs/womanpilot.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5 style="color: rgb(255, 246, 246);font-size: 30px; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);">Experienced Pilots</h5>
                    <p style="color: rgb(255, 246, 246); text-shadow: 2px 2px 1px rgba(0, 0, 0, 0.5); padding-bottom: 10px;">Experience the Sky, Guided by the Best.</p>
                </div>
            </div>
        </div>
        <button  style ="margin-left:100px"class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button style="margin-right:100px" class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
   
</section>

<div class="imgwithtext">
    <img src="~/img/homepageimgs/R.gif" alt="" height="90px" />
    <p class="overlay">Experience Airborne Excellence</p>
</div>
<section class="section2">
    <h1 class="title"> Popular Destinations</h1>
    <div class="container">
        <div class="row">
            <div class="col-lg-8" style="margin-top:20px; margin-left:40px">
                <!-- Cards -->
                <div class="card mb-3" onclick="updateMap(1)" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="~/img/homepageimgs/paris1.jpg" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"> Paris, France</h5>
                                <p class="card-text">
                                    Paris beckons with the Eiffel Tower's romance, Louvre's grandeur. Musee d’Orsay displays Monet, Renoir. Chic Saint-Germain shopping, Île de la Cité's history, and lush Luxembourg Gardens allure.
                                </p>
                                <p class="card-text"><small class="text-body-secondary">2300 flights to destination this year.</small></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-3" onclick="updateMap(2)" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="~/img/homepageimgs/newyork.jpg" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">Times Square, New York City</h5>
                                <p class="card-text">NYC has iconic landmarks and a bustling population, where Central Park and Broadway are highlights, so visit now for a fun vacation. You won't be bored with a nightlife
                                    and amazing cuisine, but make sure to see unique street acts too.</p>
                                <p class="card-text"><small class="text-body-secondary">2000 flights to destination this year.</small></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-3" onclick="updateMap(3)" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="~/img/homepageimgs/london.jpg" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">London, England</h5>
                                <p class="card-text">London is the capitol of England, with its beautiful parks, historic Buckingham Palace, and iconic Big Ben. Visit London to see why everyone loves this city.
                                    Tourists flock to see Big Ben and eat traditional British food.</p>
                                <p class="card-text"><small class="text-body-secondary">1800 flights to destination this year.</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4"style="margin-left:-300px; margin-top:20px">
                <iframe id="map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d970743.4484940184!2d-77.2761154!3d18.11933375!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8edbcbf81682ef25%3A0x2d62b82276f6cfdb!2sCockpit%20Country!5e0!3m2!1sen!2sjm!4v1701021592954!5m2!1sen!2sjm" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                <h3 class="mid" style="color: white;margin-top: 16px; border-radius: 15px; margin-bottom: 20px; width:600px;background-color: black; padding: 25px; margin-left: 10px; text-align: center; font-size: 36px; font-weight: bold;">Find Locations on the Map</h3>
                <div class="btn-group" style="margin-left:170px; width: 300px; height:170px;" role="group" aria-label="Basic outlined example">
                    <button id="parisbutton" class="btn btn-outline-dark" onclick="updateMap(1)">Paris</button>
                    <button id="timesbutton" class="btn btn-outline-dark" onclick="updateMap(2)">Times<br> Square</button>
                    <button id="londonbutton" class="btn btn-outline-dark" onclick="updateMap(3)">London</button>
                </div>
            </div>
        </div>
    </div>
  
</section>
<script>
    function updateMap(num) {
        var mapIframe = document.getElementById('map');
        var ParisButton = document.getElementById('parisbutton');
        var TimesButton = document.getElementById('timesbutton');
        var LondonButton = document.getElementById('londonbutton');

        if (ParisButton.textContent === "Paris" && num === 1) {
            var newSrc = `https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d83998.96777926585!2d2.264634380721548!3d48.85882549198901!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e1f06e2b70f%3A0x40b82c3688c9460!2sParis%2C%20France!5e0!3m2!1sen!2sjm!4v1701287786271!5m2!1sen!2sjm" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade`;

            mapIframe.src = newSrc;

        } else if (TimesButton.textContent === "Times Square" && num === 2) {
            var newSrc = `https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.1841337506003!2d-73.98811752422726!3d40.75797467138669!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25855c6480299%3A0x55194ec5a1ae072e!2sTimes%20Square!5e0!3m2!1sen!2sjm!4v1701289128835!5m2!1sen!2sjm" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade`;

            mapIframe.src = newSrc;
        }else if(LondonButton.textContent === "London" && num ===3){
            var newSrc = `https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d158858.585197875!2d-0.2664054034879677!3d51.52852620060856!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47d8a00baf21de75%3A0x52963a5addd52a99!2sLondon%2C%20UK!5e0!3m2!1sen!2sjm!4v1701289511397!5m2!1sen!2sjm" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade`;

            mapIframe.src = newSrc;
        }
    }

</script>
